<style>
    header {
        padding-top: var(--space_Medium);
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 680px;
        margin: 0 auto;
    }

    .menu {
        display: flex;
        column-gap: var(--space_Base);
    }

    .menu li a {
        color: var(--black);
        font-weight: 400;
        transition: all .4s ease-out;
    }

    @media screen and (max-width:767px) {
        header {
            flex-direction: column;
            align-items: flex-start;
            padding-left: var(--space_Medium);
            padding-right: var(--space_Medium);
        }

        .site-title {
            margin-bottom: var(--space_Base);
        }
    }
</style>

<script>
    const menu = document.querySelector(".menu");
    const menuItem = menu.querySelectorAll("li a");

    menu.addEventListener("mouseover", function(event) {
        menuItem.forEach( function(menuLink) {
            menuLink.style.opacity = ".25";
        });
        event.target.style.opacity = "1";
    });

    menu.addEventListener("mouseout", function() {
        menuItem.forEach( function(menuLink) {
            menuLink.style.opacity = "1";
        });
    });
</script>