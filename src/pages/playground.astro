---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import dribbbleShot from "../data/dribbbleShot.json";
import heroImage from "../../public/images/playground.jpg";
---

<MainLayout pageTitle="Playground">

    <Hero image={heroImage} imageName="meme of a amazed guy">
        <h2 class="title">When I'm not designing for work, I design for passion!</h2>
        <p class="paragraph">Here you can find a collection of random ideas, personal creations and experiments I put together in my spare time.<br/> Visit <a href="https://dribbble.com/vincenzopetito" target="_blank">my Dribbble profile</a> to discover more!</p>
    </Hero>

    <section>
        <ul class="shots">
            {dribbbleShot.map((shot) =>
                <li>
                    <a href={shot.url} target="_blank">
                        <figure style={{ backgroundImage: `url("${shot.image}")` }}></figure>
                        <h4>{shot.title}</h4>
                    </a>
                </li>
            )}
        </ul>
    </section>

</MainLayout>

<style>
    .shots {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space_Large);
    }

    .shots li:nth-child(even) {
        transform: translateY(var(--space_Large));
    }

    .shots li a {
        display: block;
        padding: var(--space_Base);
        text-align: center;
        background: white;
        border-radius: calc(var(--space_Base) + var(--space_Small));
        box-shadow: var(--shadow);
        transition: all 0.3s var(--easing);
    }

    .shots li a:hover {
        transform: translateY(calc(var(--space_Base) * -1));
        box-shadow: 0 30px 50px rgba(28, 40, 51, 0.2);
        cursor: pointer;
    }

    .shots li a figure {
        margin: 0;
        border-radius: calc(var(--space_Base) + var(--space_Small));
        width: 100%;
        aspect-ratio: 4 / 3.5;
        background-size: cover;
        background-position: center;
    }

    .shots li a h4 {
        margin: var(--space_Base) 0 0 0;
        line-height: 1.3;
        color: var(--black);
    }

    .shots li a:hover h4 {
        color: var(--primaryColor);
    }

    @media screen and (max-width: 767px) {
        .shots {
            grid-template-columns: 1fr;
        }

        .shots li:nth-child(even) {
            transform: translateY(0);
        }
    }
</style>
